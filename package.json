{
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/element-ui"]
  },
  "scripts": {
    "dev": "lerna run dev --stream",
    "build": "lerna run build --stream",
    "storybook": "lerna run storybook --stream",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "new-version": "lerna version --conventional-commits -m \"chore: publish %s\"",
    "release": "lerna publish from-package",
    "commit": "npx git-cz",
    "lint": "vue-cli-service lint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "core-js": "^2.6.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@knowbly/postcss-overflow-scrolling-touch": "0.0.1",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-console": "^1.1.1",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-storyshots": "^5.1.9",
    "@storybook/addon-storyshots-puppeteer": "^5.1.9",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/vue": "^5.1.9",
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-plugin-unit-jest": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-macros": "^2.6.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^3.0.1",
    "lerna": "^3.16.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.9.0",
    "require-context.macro": "^1.0.4",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.6.10"
  },
  "engines": {
    "node": ">= 10"
  },
  "author": "Gean Carlos <gean.marroquin@gmail.com>",
  "license": "MIT"
}
