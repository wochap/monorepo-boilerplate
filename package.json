{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "new": "hygen package new",
    "dev": "lerna run dev --stream -- --color",
    "build": "lerna run build --stream",
    "test:unit": "lerna run test:unit --stream -- --color",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "new-version": "lerna version --conventional-commits --message 'chore: publish' --include-merged-tags",
    "release": "lerna publish from-package",
    "lint": "lerna run lint --stream -- --color",
    "prettier": "lerna run prettier --stream -- --color",
    "commit": "git-cz"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "hygen": "^4.0.8",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5"
  },
  "license": "MIT"
}
